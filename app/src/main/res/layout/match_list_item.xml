<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:clickable="true"
        android:focusable="auto"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="20px">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50px">

            <TextView
                android:id="@+id/userName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/bookImage1"
                android:layout_marginTop="19dp"
                android:text="TextView"
                android:textSize="@dimen/listUsernameTextSize" />

            <TextView
                android:id="@+id/userName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/userName1"
                android:layout_alignBottom="@+id/userName1"
                android:layout_alignEnd="@+id/bookImage2"
                android:text="TextView"
                android:textSize="@dimen/listUsernameTextSize" />

            <ImageView
                android:id="@+id/bookImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/bookImage1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/bookImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/userName1"
                android:layout_marginTop="43dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/book1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bookImage1"
                android:layout_below="@+id/bookImage1"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textSize="@dimen/listBookTitleTextSize" />

            <TextView
                android:id="@+id/book2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/book1Title"
                android:layout_alignBottom="@+id/book1Title"
                android:layout_alignEnd="@+id/bookImage2"
                android:singleLine="false"
                android:text="TextView"
                android:textSize="@dimen/listBookTitleTextSize" />

            <TextView
                android:id="@+id/author1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/book1Title"
                android:layout_below="@+id/book1Title"
                android:text="TextView"
                android:textSize="@dimen/listAuthorNameTextSize" />

            <TextView
                android:id="@+id/author2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/book2Title"
                android:layout_below="@+id/book2Title"
                android:text="TextView"
                android:textSize="@dimen/listAuthorNameTextSize" />

            <ImageButton
                android:id="@+id/transactionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/book1Title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                app:srcCompat="@android:drawable/arrow_up_float" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>